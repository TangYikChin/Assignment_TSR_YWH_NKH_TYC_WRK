<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ClothedProduct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
                android:background="#FFEB3B">

            </androidx.appcompat.widget.Toolbar>


            <FrameLayout
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="55dp"
                android:background="@drawable/clothed2"
                android:elevation="4dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#FFFFFF"
                    android:elevation="4dp"
                    android:src="@drawable/ic_action_name" />


            </FrameLayout>

            <LinearLayout
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView6"
                android:background="#CACFED"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp"
                android:visibility="visible">

                <RatingBar
                    android:id="@+id/ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="false" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#B3BBE8"
                    android:gravity="right"
                    android:text="RM 18.80"
                    android:textColor="@android:color/primary_text_light_nodisable"
                    android:textSize="26dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rating"
                android:layout_marginTop="1dp"
                android:background="#FFEB3B"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/clothed3"
                    android:textColor="@android:color/primary_text_light_nodisable"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="right"
                    android:text="Size"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/qut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">
                    //// M size ////

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/button_m"
                            android:layout_width="44dp"
                            android:layout_height="wrap_content"
                            android:background="#FFF0F0"
                            android:ellipsize="none"
                            android:text="M"
                            android:textColor="#9A1F1F"
                            android:textColorHighlight="#5E0C0C"
                            android:textSize="20sp"
                            android:textStyle="bold|italic" />

                    </FrameLayout>

                    //// L size ////

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/button_l"
                            android:layout_width="44dp"
                            android:layout_height="wrap_content"
                            android:background="#FFF0F0"
                            android:ellipsize="none"
                            android:text="L"
                            android:textColor="#9A1F1F"
                            android:textColorHighlight="#5E0C0C"
                            android:textSize="20sp"
                            android:textStyle="bold|italic" />
                    </FrameLayout>

                    //// XL size ////

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1">


                        <Button
                            android:id="@+id/button_xl"
                            android:layout_width="44dp"
                            android:layout_height="wrap_content"
                            android:background="#FFF0F0"
                            android:ellipsize="none"
                            android:text="XL"
                            android:textColor="#9A1F1F"
                            android:textColorHighlight="#5E0C0C"
                            android:textSize="20sp"
                            android:textStyle="bold|italic" />

                    </FrameLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="end"
                    android:text="@string/quantity_header"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/qut1"
                    android:layout_width="199dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="20dp"
                    android:background="#B3BBE8"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/plus"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="22dp"
                        android:padding="2dp"
                        android:text="@string/plus_icon" />

                    <EditText
                        android:id="@+id/sizeno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:hint="@string/zero"
                        android:inputType="number"
                        android:maxLength="1"
                        android:text="@string/zero"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/minus"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="22dp"
                        android:padding="2dp"
                        android:text="@string/minus_icon" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="right"
                    android:text="Specificatons"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="right"
                    android:text="OEM Brand, Short Sleeve, T-shirt and Casual type, O-Neck"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="right"
                    android:text="Service"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="right"
                    android:text="14 days return to seller"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="right"
                    android:text="Product Description"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Recommend Hand Wash and Hang Dry with Cold Water. Please do not use Bleach, Occasion:Outdoor,Beach,Summer,Party,Dating,Daily recreation,Home."
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/add_to_cart_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/holo_orange_light"
                    android:shadowColor="#FFFFFF"
                    android:text="@string/add_to_chart"
                    android:textColor="#B36908"
                    android:textColorHighlight="#00FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>


        </RelativeLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>