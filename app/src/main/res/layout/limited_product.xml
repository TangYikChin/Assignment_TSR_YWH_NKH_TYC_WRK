<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/limited_product"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/limited_product"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/limited_product"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/limited1" />

    <TextView
        android:id="@+id/LP"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView13"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:text="@string/limitedproduct" />

    <TextView
        android:id="@+id/PLD"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:layout_below="@+id/LP"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:text="@string/price_limited_product" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/limited_product"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/limited_product"
        app:srcCompat="@drawable/limitedproduct2" />

    <TextView
        android:id="@+id/LP2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView14"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:text="@string/limitedproduct2" />

    <TextView
        android:id="@+id/PLP2"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:layout_below="@+id/LP2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:text="@string/price_limited_product2" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/PLD"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/limited3" />

    <TextView
        android:id="@+id/LP3"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:layout_below="@+id/imageView16"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:text="@string/limitedproduct3" />

    <TextView
        android:id="@+id/PLP3"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:layout_below="@+id/LP3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:text="@string/price_limited_product3" />


</RelativeLayout>