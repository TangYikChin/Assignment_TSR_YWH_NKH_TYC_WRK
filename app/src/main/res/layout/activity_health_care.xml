<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mask"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthCareActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:background="#FFEB3B">

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/limited_product"
        app:srcCompat="@drawable/mask1" />

    <TextView
        android:id="@+id/mask1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:text="@string/mask1" />

    <TextView
        android:id="@+id/maskPrice1"
        android:layout_width="152dp"
        android:layout_height="29dp"
        android:layout_below="@+id/mask1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:text="@string/price_Mask1" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/limited_product"
        app:srcCompat="@drawable/mask" />

    <TextView
        android:id="@+id/mask2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:text="@string/mask2" />

    <TextView
        android:id="@+id/maskPrice2"
        android:layout_width="152dp"
        android:layout_height="27dp"
        android:layout_below="@+id/mask2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:text="@string/price_Mask2" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/maskPrice1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/healthcare" />

    <TextView
        android:id="@+id/HC"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView11"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:text="@string/healthcare3" />

    <TextView
        android:id="@+id/PHC"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:layout_below="@+id/HC"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:text="@string/price_healthcare3" />


</RelativeLayout>


