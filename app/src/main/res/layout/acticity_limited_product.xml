<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:background="#FFEB3B">

    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/phone2" />

    <TextView
        android:id="@+id/LP"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView13"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:text="Realme 6 Pro" />

    <TextView
        android:id="@+id/PLD"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:layout_below="@+id/LP"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:text="RM179.00" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/limited_product"
        app:srcCompat="@drawable/phone1" />

    <TextView
        android:id="@+id/LP2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView14"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:text="Xiaomi Redmi Note 8" />

    <TextView
        android:id="@+id/PLP2"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:layout_below="@+id/LP2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:text="RM579.00" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/PLD"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/nintendo" />

    <TextView
        android:id="@+id/LP3"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:layout_below="@+id/imageView16"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:text="@string/limitedproduct3" />

    <TextView
        android:id="@+id/PLP3"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:layout_below="@+id/LP3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:text="@string/price_limited_product3" />


</RelativeLayout>